<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ciuc.andrii.firebase_1.MainActivity"
    android:background="@drawable/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@null">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/hint_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:hintTextAppearance="@style/MyHintText"
        android:layout_margin="3dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="login"
            android:text="andriychuk77@gmail.com"
            android:textColor="@color/text1"
            android:textColorHint="@color/text1"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hint_pass"
        app:errorEnabled="true"
        app:hintTextAppearance="@style/MyHintText"
        android:layout_margin="3dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:text="nokia2710"
            android:id="@+id/edit_password"
            android:textColor="@color/text1"
            android:textColorHint="@color/text1"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btn_autor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Авторизація"
        android:background="@drawable/button_style"
        android:textColor="@color/text1"
        android:layout_margin="3dp" />

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Реєстрація"
        android:background="@drawable/button_style"
        android:textColor="@color/text1"
        android:layout_margin="3dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_sign_in_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Авторизація"
            android:textColor="@color/text1"
            android:layout_margin="3dp" />

        <Button
            android:id="@+id/btn_sing_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Signout"
            android:background="@drawable/button_style"
            android:textColor="@color/text1"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/text1"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/image_user"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_facebook_login"
        android:layout_gravity="center_horizontal"
        android:text="  connect_with_facebook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GitHub"
            android:id="@+id/btn_github"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

</RelativeLayout>